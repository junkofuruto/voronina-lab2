<Window x:Class="EX13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EX13"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        <TextBox x:Name="ArrayTextBox" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="10 10 10 0" Height="200" Text="110000111000"/>
        <TextBox x:Name="TargetTextBox" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="10 220 10 0" Height="20" Text="4*3"/>
        <Button VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="10 250 10 10" Height="40" Content="CALCULATE" Click="ProceedTaskAction"/>
    </Grid>
</Window>
